.row
  .col-md-12
    %h2
      .pull-right
        = link_to t('canned_meat.views.lists.index.new'), canned_meat.new_list_path, class: 'btn btn-primary'
      =t 'canned_meat.views.lists.index.headline'

    %table.table.table-striped
      %thead
        %tr
          %th= CannedMeat::List.human_attribute_name('name')
          %th=t 'canned_meat.views.defaults.actions'
      %tbody
        - @lists.each do |list|
          %tr
            %td= list.name
            %td
              = link_to t('canned_meat.views.defaults.buttons.show'), list, class: 'btn btn-default btn-sm'
              = link_to t('canned_meat.views.defaults.buttons.edit'), canned_meat.edit_list_path(list), class: 'btn btn-default btn-sm'
              = link_to t('canned_meat.views.defaults.buttons.destroy'), list, method: :delete, data: {confirm: t('canned_meat.views.defaults.confirmation')}, class: 'btn btn-danger btn-sm'
